<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ClienteController</servlet-name>
        <servlet-class>controller.ClienteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioController</servlet-name>
        <servlet-class>controller.UsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuartosController</servlet-name>
        <servlet-class>controller.QuartosController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AluguelController</servlet-name>
        <servlet-class>controller.AluguelController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FinalizarAluguelController</servlet-name>
        <servlet-class>controller.FinalizarAluguelController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClienteController</servlet-name>
        <url-pattern>/ClienteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioController</servlet-name>
        <url-pattern>/UsuarioController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuartosController</servlet-name>
        <url-pattern>/QuartosController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AluguelController</servlet-name>
        <url-pattern>/AluguelController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FinalizarAluguelController</servlet-name>
        <url-pattern>/FinalizarAluguelController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
